        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Catagory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPurchase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pro_Picture)
        </td>
        <td>
            <a class="glyphicon glyphicon-edit" href="@Url.Action("Edit","Products", new { id = item.ProductId })"></a>
            <a class="glyphicon glyphicon-book" href="@Url.Action("Details","Products", new { id = item.ProductId })"></a>
            <a class="glyphicon glyphicon-trash" href="@Url.Action("Delete","Products", new { id = item.ProductId })"></a>

            @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
