@model IEnumerable<Shopping_Store.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            Product Name
            @*@Html.DisplayNameFor(model => model.Catagory.Name)*@
        </th>
        <th>
            Product Name
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            Description
            @*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th>
            Product Sale
            @*@Html.DisplayNameFor(model => model.ProductSale)*@
        </th>
        <th>
            Product Purchase
            @*@Html.DisplayNameFor(model => model.ProductPurchase)*@
